# SQLite version 3.x
#   gem install sqlite3-ruby (not necessary on OS X Leopard)
development:
  adapter: postgresql
  database: chaos_development
  username: postgres
  password:
  encoding: unicode
  shooting_star:
    server:
      - localhost:8080
