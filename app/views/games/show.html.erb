<%= javascript_tag "becomePlayer(#{me.id})" if playing? %>

<div id="board">
</div>
<% for sprite in @game.sprites %>
	<%= javascript_tag "putSprite(#{sprite.id}, #{image_path(sprite.image).to_json}, #{sprite.x}, #{sprite.y})" %>
<% end %>

<div id="players_panel">
	<h2>Players</h2>
	<ul id="players_list">
		<%= render :partial => 'player', :collection => @game.players,
			:locals => {:highlight_me => true} %>
	</ul>

	<% if not playing? %>
		<h2>Join this game</h2>
		<% form_for [@game, @new_player] do |f| %>
			<%= render :partial => 'players/form', :object => @new_player %>
			<%= f.submit 'Join' %>
		<% end %>
	<% end %>
</div>

<%= meteor_strike @game.channel %>
