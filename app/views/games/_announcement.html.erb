<% game = announcement %>
<li id="game_<%= game.id %>">
	<div class="heading"><%= link_to "Game #{game.id}", game %> - <%= pluralize(game.players.count, 'player', 'players') %></div>
	<div class="info">
		started <%= time_ago_in_words(game.created_at) %> ago.
		<% if game.operators.size == 1 %>Operator<% else %>Operators<% end %>: <%= game.operators.collect{|op| h(op.name)}.join(', ') %>
	</div>
</li>
